{{#each this}}
  <div class="row">
    <div class="col-md-12 locationInput">
      <h2>{{name}}</h2>
      <!-- <h4>Friday 10:37 AM</h4> add time if we have time -->
      <h5>{{weather[0]description}}</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 temperatureInput">
        <div class="col-md-6">
          <h1><span class="glyphicon glyphicon-globe"></span>{{main.temp}} K</h1>
        </div>
        <div class="col-md-6">
          <h5>Wind: {{wind.speed}} MPH</h5>
          <h5>Air Pressure: {{main.pressure}} hPa</h5>
        </div>
    </div>
  </div><!-- /row-->
  <div class="row">
    <div class="col-md-12 dayButton">
      <div class="col-md-6 col-md-offset-3">
        <button class="btn btn-primary" type="button">3-Day</button>
        <button class="btn btn-primary" type="button">7-Day</button>
      </div>
    </div>
  </div>
{{/each}}          